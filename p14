static void p14(){
        int n=7;
    for (int i=1;i<=n;i++){
    for (int j=1;j<=n;j++){
    if (i>(n/2+1)) {
        if(j<i)
        System.out.print(" ");
        else
        System.out.print("* ");
    }
    else if(j<=n-i){
        System.out.print(" ");
    }
    else
        System.out.print("* ");
    }
    System.out.println();
    }
    }
